<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <link rel="icon" type="image/png" href="/multitenant/img/easyicon.png" />
  <title>Complete signup</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #f8f9fa;
    }

    .container {
      display: flex;
      background: white;
      width: 80%;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }

    /* Left Section */
    .form-section {
      flex: 1;
      padding: 2rem;
    }

    .form-section h2 {
      margin-bottom: 1.5rem;
      font-size: 1.5rem;
      font-weight: bold;
      color: #333;
    }

    .form-group {
      margin-bottom: 1.2rem;
    }

    label {
      display: block;
      margin-bottom: 0.3rem;
      font-weight: 600;
      font-size: 0.9rem;
    }

    input {
      width: 100%;
      padding: 0.6rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1rem;
    }

    .btn {
      background-color: #1a202c;
      color: white;
      padding: 0.8rem 1.2rem;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .btn:hover {
      background-color: #2d3748;
    }
    .alert {
      padding: 0.7rem;
      margin-bottom: 1rem;
      border-radius: 6px;
    }

    .alert-success {
      background: #e6fffa;
      color: #065f46;
    }

    .alert-danger {
      background: #fee2e2;
      color: #991b1b;
    }

    /* Right Section */
    .preview-section {
      flex: 1;
      background-color: #f4f5f7;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 2rem;
    }

    .preview {
      width: 250px;
      height: 480px;
      background-color: white;
      border: 1px solid #ddd;
      border-radius: 16px;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 1rem;
    }

    .preview .icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .preview h3 {
      margin-bottom: 1rem;
      font-size: 1.2rem;
    }

    .preview nav {
      display: flex;
      justify-content: space-around;
      width: 100%;
      font-size: 0.9rem;
      margin-top: auto;
      padding: 0.5rem 0;
      border-top: 1px solid #ddd;
    }
    

    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }
      .preview-section {
        display: none;
      }
    }
  </style>
</head>

<body>
  <div class="container">
    <!-- LEFT SECTION -->
    <div class="form-section">
      <form action="/multitenant/complete-signup" method="POST">
       <% if (success_msg && success_msg.length) { %>
          <div class="alert alert-success"><%= success_msg[0] %></div>
        <% } %>

        <% if (error_msg && error_msg.length) { %>
          <div class="alert alert-danger"><%= error_msg[0] %></div>
        <% } %>
        <!-- Email (from render) -->
       

        <!-- Hidden email field -->
        <input type="hidden" name="email" value="<%= email %>" />

       

        <div class="mb-3">
              <label class="form-label">Business Type *</label>
              <select 
                class="form-select" 
                name="type" 
                required>
                <option value="">Select business type</option>
                <option value="ecommerce">Ecommerce</option>
                <option value="restaurant">Restaurant</option>
              </select>
            </div>

       <!-- Store Name and Phone (Same Row) -->
<div class="row">

  <!-- Store Name -->
  <div class="col-md-4 mb-3">
    <label class="form-label">Password *</label>
    <input 
      type="text" 
      class="form-control" 
      name="password" 
      placeholder="Enter password" 
      required>
  </div>
  <!-- Store Name -->
  <div class="col-md-4 mb-3">
    <label class="form-label">Store Name *</label>
    <input 
      type="text" 
      class="form-control" 
      name="name" 
      placeholder="Enter store name" 
      required>
  </div>

  <!-- Phone -->
  <div class="col-md-4 mb-3">
    <label class="form-label">Phone *</label>
    <input 
      type="text" 
      class="form-control" 
      name="phone" 
      placeholder="+234 Phone number"
      required>
  </div>

</div>

        <div class="mb-3">
              <label class="form-label">Address *</label>
              <input 
                type="text" 
                class="form-control" 
                name="address" 
                placeholder="Street address"
                required>
            </div>

            <!-- State City Zip -->
            <div class="row">
              <div class="col-md-4 mb-3">
                <label class="form-label">State</label>
                <input 
                  type="text" 
                  class="form-control" 
                  name="state" 
                  placeholder="State">
              </div>

              <div class="col-md-4 mb-3">
                <label class="form-label">City</label>
                <input 
                  type="text" 
                  class="form-control" 
                  name="city" 
                  placeholder="City">
              </div>

              <div class="col-md-4 mb-3">
                <label class="form-label">Zip</label>
                <input 
                  type="text" 
                  class="form-control" 
                  name="zip" 
                  placeholder="Zip code">
              </div>
            </div>

        <button type="submit" class="btn">Create</button>
      </form>
    </div>

    <!-- RIGHT SECTION -->
    <div class="preview-section">
      <div class="preview">
        <div class="icon">ðŸ›’</div>
        <h3>EasyApps</h3>
        <div style="flex: 1;"></div>
        <nav>
          <span>Home</span>
          <span>Search</span>
        </nav>
      </div>
    </div>
  </div>
</body>
</html>
