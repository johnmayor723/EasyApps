<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= name %> | Catalog</title>

<link rel="stylesheet" href="styles.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/multitenant/css/store/store-styles.css">

<style>
/* Only layout styles â€” NOT card styles */

.catalog-products {
  padding: 60px 5%;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 30px;
}
</style>
</head>

<body>

<!-- ================= NAVBAR ================= -->
<nav class="navbar">
  <div class="logo">
   <%= name %>
  </div>

  <ul class="nav-links" id="navLinks">
    <li><a href="/">Home</a></li>
    <li><a href="/catalog">Catalog</a></li>
    <li><a href="/offers">Offers</a></li>
  </ul>

  <!-- CART (inline styled as requested) -->
  <div style="margin-left:20px; position:relative;">
    <a href="" style="text-decoration:none; font-weight:600; color:inherit;"
      onclick="openCartModal(); return false;" class="cart-link">
      ðŸ›’ Cart
    </a>

    <% if(session && session.cart && session.cart.totalQty > 0){ %>
      <span style="
        position:absolute;
        top:-8px;
        right:-14px;
        background:#e63946;
        color:#fff;
        font-size:12px;
        padding:4px 7px;
        border-radius:50%;
        font-weight:600;
      ">
        <%= session.cart.totalQty %>
      </span>
    <% } %>
  </div>

  <div class="menu-toggle" onclick="toggleMenu()">â˜°</div>
</nav>



<!-- ================= HERO ================= -->
<section class="catalog-hero">
  <div class="catalog-hero-content">
    <h1>Featured Products</h1>
    <p>Explore our available products, filter by category, and find what fits your needs.</p>
  </div>
</section>




<!-- ================= PRODUCTS ================= -->
<section class="catalog-products">
  <div class="product-grid">

    <% if (products && products.length > 0) { %>

      <% products.forEach(function(product){ %>

        <!-- PRODUCT CARD (uses your existing styling) -->
        <div class="product-card">

          <div class="product-image">
            <img 
              src="<%= product.images && product.images.length > 0 ? product.images[0] : 'https://via.placeholder.com/400x400?text=Product' %>" 
              alt="<%= product.name %>">
          </div>

          <div class="product-info">
            <a style="text-decoration: none;color: #c76b00;;" href="/store/product/<%= product._id %>"><h6><%= product.name %></h6></a>

            <% if(product.description){ %>
              <p><%= product.description.substring(0, 100) %>...</p>
            <% } %>

            <div class="price">
             <p> â‚¦<%= product.price %></p>
            </div>

            <form action="/store/cart/<%= product._id %>/add" method="POST">
              <input type="hidden" name="name" value="<%= product.name %>">
              <input type="hidden" name="price" value="<%= product.price %>">
              <button style="padding: 10px 13px; background: #c76b00; color: #fff; border: none; border-radius: 5px; cursor: pointer;" type="submit">Add to Cart</button>
            </form>

          </div>

        </div>

      <% }) %>

    <% } else { %>

      <p style="text-align:center; width:100%; padding:40px;">
        No products available.
      </p>

    <% } %>

  </div>
</section>



<!-- ================= FOOTER ================= -->
<footer class="footer">
  <div class="footer-container">

    <!-- STORE INFO -->
    <div class="footer-brand">
      <h2><%= name %></h2>
      <p>
      Explore our carefully curated collection of
      high-quality products designed to deliver style, performance,
      and exceptional value.
      Our commitment to quality products, reliable service, and affordable pricing
      ensures that you have the best shopping experience.
      </p>
    </div>

    <!-- CONTACT INFO (dynamic) -->
    <div class="footer-contact">
      <h3>Contact Us</h3>

      <% if (contact) { %>
        <p>
          <%= contact.address || '' %><br>
          <%= contact.city || '' %>, 
          <%= contact.state || '' %> 
          <%= contact.zip || '' %>

        </p>

        <% if (contact.phone) { %>
          <p>Phone: <%= contact.phone %></p>
        <% } %>
        <p>Email: <%= email || '' %></p>
      <% } else { %>
        <p>Contact information coming soon.</p>
      <% } %>
    </div>

    <!-- QUICK LINKS -->
    <div class="footer-links">
      <h3>Quick Links</h3>
      <ul style="list-style: none;">
        <li>
          <a href="/store/<%= tenant.slug || name %>/<%= tenant.tenantId %>">
            Home
          </a>
        </li>
        <li>
          <a href="/store/<%= tenant.slug || name %>/products">
            Products
          </a>
        </li>
        <li>
          <a href="/store/<%= tenant.slug || name %>/about">
            About
          </a>
        </li>
        <li>
          <a href="/store/<%= tenant.slug || name %>/contact">
            Contact
          </a>
        </li>
      </ul>
    </div>

  </div>

  <div class="footer-bottom">
    Â© <%= new Date().getFullYear() %> <%= name %>. All rights reserved.
  </div>
</footer>


<!-- CART MODAL -->
<div id="cartModal" class="cart-modal">

  <div class="cart-modal-content">

    <!-- HEADER -->
    <div class="cart-header">
      <h3>Your Cart</h3>
      <button class="cart-close" onclick="closeCartModal()">&times;</button>
    </div>


    <!-- BODY -->
    <div style="color: #333;" class="cart-body">

      <% if (!session.cart || session.cart.items.length === 0) { %>

        <div class="cart-empty">
          Your cart is empty
        </div>

      <% } else { %>

        <% session.cart.items.forEach(item => { %>

          <div class="cart-item">

            <div>

              <div class="cart-item-name">
                <%= item.name %>
              </div>


              <!-- QTY CONTROLS -->
              <div class="cart-qty-control">

                <button onclick="updateQty('<%= item._id %>', -1)">
                  âˆ’
                </button>

                <span id="qty-<%= item._id %>">
                  <%= item.qty %>
                </span>

                <button onclick="updateQty('<%= item._id %>', 1)">
                  +
                </button>

              </div>

            </div>


            <div class="cart-item-price">
              â‚¦<%= item.total.toFixed(2) %>
            </div>

          </div>

        <% }) %>

      <% } %>

    </div>


    <!-- FOOTER -->
    <div class="cart-footer">

      <div class="cart-total">
        Total: â‚¦<%= session.cart?.totalPrice?.toFixed(2) || "0.00" %>
      </div>

      <button onclick="sendWhatsAppOrder()" class="whatsapp-btn">
        Place Order via WhatsApp
      </button>

    </div>

  </div>

</div>

<script>
function toggleMenu(){
  document.getElementById("navLinks").classList.toggle("active");
}
</script>
<script>

function openCartModal() {
  document.getElementById("cartModal").style.display = "block";
}

function closeCartModal() {
  document.getElementById("cartModal").style.display = "none";
}

window.onclick = function(e) {
  const modal = document.getElementById("cartModal");

  if (e.target === modal) {
    modal.style.display = "none";
  }
};


function sendWhatsAppOrder() {

  const rawPhone = "<%= contact.phone || '' %>";
  let phone = rawPhone.replace(/\D/g, '');

  // common normalization: if local format starts with 0 (e.g. 08012345678) convert to 234XXXXXXXXX
  if (phone.length === 11 && phone.startsWith('0')) {
    phone = '234' + phone.slice(1);
  }

  // enforce format: must start with 234 and be exactly 12 digits long (234 + 10 digits)
  if (!/^234\d{10}$/.test(phone)) {
    alert('Invalid phone format. Expected: 234XXXXXXXXX (12 digits, starting with 234).');
    return;
  }

  <% 
    // build the message on the server to avoid injecting unescaped strings into client JS
    var waMessage = 'Hello, I want to place an order:\n\n';
    if (typeof session !== 'undefined' && session && session.cart && Array.isArray(session.cart.items) && session.cart.items.length > 0) {
      session.cart.items.forEach(function(item) {
        waMessage += 'â€¢ ' + (item.name || '') + ' x ' + (item.qty || 0) + ' = â‚¦' + (item.total ? item.total.toFixed(2) : '0.00') + '\n';
      });
      waMessage += '\nTotal: â‚¦' + (session.cart.totalPrice ? session.cart.totalPrice.toFixed(2) : '0.00');
    }
  %>

  // message is already URL-encoded on the server to ensure it's safe in the client script
  const message = "<%= encodeURIComponent(waMessage) %>";

  const url = `https://wa.me/${phone}?text=${message}`;

  window.open(url, "_blank");

}

</script>
<script>
  // UPDATE QTY 
  async function updateQty(menuId, change) {
    try {
      const res = await fetch(`/store/cart/update/${menuId}?tenantId=<%= tenant.tenantId %>`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ change })
      });
      const data = await res.json();
      if (data.success) {
        document.getElementById("cart-count").innerText = data.cart.totalQty;
        location.reload();
      }
    } catch (err) {
      console.error(err);
    }
  }
</script>

</body>
</html>
