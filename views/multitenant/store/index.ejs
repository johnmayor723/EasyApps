<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= name %></title>

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="/multitenant/css/store/store-styles.css">

<style>
/* Optional small neutral improvements */
.hero .badge{
  background:#f4f4f4;
  color:#333;
}
</style>
</head>

<body>

<!-- ================= NAVBAR ================= -->
<nav class="navbar">
  <div class="logo">
     <%= name %>
  </div>

  <ul class="nav-links" id="navLinks">
    <li><a href="/multitenant/<%= tenant.tenantId %>/<%= name %>">Home</a></li>
    <li><a href="/store/featured/<%= tenant.tenantId %>/">Shop</a></li>
    <li><a href="/store/featured/<%= tenant.tenantId %>/">Featured</a></li>
    <li><a href="/store/offers/<%= tenant.tenantId %>/">Offers</a></li>
  </ul>

  <div class="search-box">
    <input type="text" placeholder="Search products...">
  </div>

  <button class="login-btn">Login</button>

  <div class="menu-toggle" onclick="toggleMenu()">☰</div>
</nav>


<!-- ================= HERO SECTION ================= -->
<section class="hero">
  <div class="hero-content">

    <div class="badge">
      Premium Online Store
    </div>

    <h1>
      Discover Quality <br>
      <span>Products You’ll Love</span>
    </h1>

    <p>
      Welcome to <%= name %>. Explore our carefully curated collection of
      high-quality products designed to deliver style, performance,
      and exceptional value.
    </p>

    <div class="hero-buttons">
      <a href="/multitenant/<%= tenant.tenantId %>/<%= name %>/catalog">
        <button class="btn-primary">
          Shop Now →
        </button>
      </a>

      <a href="#">
        <button class="btn-secondary">
          View Offers
        </button>
      </a>
    </div>

  </div>
</section>

<!-- CART MODAL -->
<div id="cartModal" class="cart-modal">

  <div class="cart-modal-content">

    <!-- HEADER -->
    <div class="cart-header">
      <h3>Your Cart</h3>
      <button class="cart-close" onclick="closeCartModal()">&times;</button>
    </div>


    <!-- BODY -->
    <div style="color: #333;" class="cart-body">

      <% if (!session.cart || session.cart.items.length === 0) { %>

        <div class="cart-empty">
          Your cart is empty
        </div>

      <% } else { %>

        <% session.cart.items.forEach(item => { %>

          <div class="cart-item">

            <div>

              <div class="cart-item-name">
                <%= item.name %>
              </div>


              <!-- QTY CONTROLS -->
              <div class="cart-qty-control">

                <button onclick="updateQty('<%= item._id %>', -1)">
                  −
                </button>

                <span id="qty-<%= item._id %>">
                  <%= item.qty %>
                </span>

                <button onclick="updateQty('<%= item._id %>', 1)">
                  +
                </button>

              </div>

            </div>


            <div class="cart-item-price">
              ₦<%= item.total.toFixed(2) %>
            </div>

          </div>

        <% }) %>

      <% } %>

    </div>


    <!-- FOOTER -->
    <div class="cart-footer">

      <div class="cart-total">
        Total: ₦<%= session.cart?.totalPrice?.toFixed(2) || "0.00" %>
      </div>

      <button onclick="sendWhatsAppOrder()" class="whatsapp-btn">
        Place Order via WhatsApp
      </button>

    </div>

  </div>

</div>
<script>
function toggleMenu(){
  document.getElementById("navLinks").classList.toggle("active");
}
</script>

</body>
</html>
