<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>EasyApps || Payment</title>

  <link rel="icon" type="image/png" href="/multitenant/img/easyicon.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    :root {
      --left-bg: #f1f3f5;
      --right-bg: #ffffff;
    }

    html, body {
      height: 100%;
      margin: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    .row-full {
      min-height: 100vh;
    }

    .g-0 {
      --bs-gutter-x: 0;
      --bs-gutter-y: 0;
    }

    .col-left {
      background: var(--left-bg);
    }

    .col-right {
      background: var(--right-bg);
    }

    .col-left,
    .col-right {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }

    .payment-box {
      width: 100%;
      max-width: 420px;
      background: #ffffff;
      border-radius: 14px;
      padding: 32px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.08);
      text-align: center;
    }

    .payment-logo {
      font-size: 1.6rem;
      font-weight: 700;
      margin-bottom: 0.75rem;
    }

    .payment-heading {
      margin-bottom: 40px;
      color: #212529;
    }

    .payment-details p {
      margin-bottom: 0.4rem;
      color: #495057;
      font-size: 0.95rem;
    }

    .btn-pay {
      margin-top: 24px;
      width: 100%;
      height: 50px;
      border-radius: 10px;
      font-weight: 600;
      font-size: 1rem;
      background: linear-gradient(135deg, #0d6efd, #198754);
      border: none;
      color: #fff;
      transition: all 0.25s ease;
    }

    .btn-pay:hover {
      transform: translateY(-1px);
      box-shadow: 0 10px 20px rgba(13, 110, 253, 0.25);
    }

    .btn-pay:active {
      transform: scale(0.98);
    }

    .btn-pay:disabled {
      background: #adb5bd;
      cursor: not-allowed;
    }

    .signup-image {
      max-width: 100%;
      max-height: 85vh;
      object-fit: contain;
    }

    @media (max-width: 767.98px) {
      .col-right {
        display: none;
      }

      .col-left {
        background: #fff;
        padding: 1rem;
      }

      .payment-box {
        box-shadow: none;
        padding: 20px;
      }

      .payment-heading {
        margin-bottom: 20px;
      }
    }
  </style>
</head>

<body>
  <div class="row g-0 row-full">

    <!-- RIGHT SIDE IMAGE -->
    <div class="col-12 col-md-6 col-right">
      <img
        class="signup-image"
        src="/multitenant/img/easylogo.png"
        alt="Payment illustration"
        onerror="this.onerror=null;this.src='https://via.placeholder.com/800x600?text=Payment'"
      >
    </div>

    <!-- LEFT SIDE PAYMENT -->
    <div class="col-12 col-md-6 col-left">
      <div class="payment-box">
        <div class="payment-logo">ðŸ’³ EasyApps</div>
        <h5 class="payment-heading">Complete Your Payment</h5>

        <div class="payment-details">
          <p><strong>Plan:</strong> <%= plan %></p>
          <p><strong>Email:</strong> <%= email %></p>
          <p><strong>Amount:</strong> â‚¦<%= price %></p>
        </div>

        <button
          type="button"
          id="pay-btn"
          class="btn-pay"
          data-email="<%= email %>"
          data-amount="<%= price %>"
          data-plan="<%= plan %>"
          data-tenant="<%= tenantId %>"
        >
          Pay â‚¦<%= price %>
        </button>
      </div>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://js.paystack.co/v1/inline.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>


  
<script>
document.addEventListener('DOMContentLoaded', function () {
  const payBtn = document.getElementById('pay-btn');

  if (!payBtn) return console.error('Pay button not found');

  payBtn.addEventListener('click', function () {
    const email = payBtn.dataset.email;
    const amount = Number(payBtn.dataset.amount);
    const plan = payBtn.dataset.plan;
    const tenantId = payBtn.dataset.tenant;

    if (!email || !amount || !tenantId) {
      alert('Missing or invalid payment data');
      return;
    }

    payWithPaystack(email, amount, plan, tenantId);
  });

  function payWithPaystack(email, amount, plan, tenantId) {
    const reference = `EA_${Date.now()}`;

    try {
      const handler = PaystackPop.setup({
        key: 'pk_test_bec2adfc8f46afff889349e2bf76e50477939d74', // PUBLIC KEY
        email: email,
        amount: amount * 100, // Paystack expects kobo
        currency: 'NGN',
        ref: reference,
        metadata: {
          custom_fields: [
            { display_name: 'Plan', variable_name: 'plan', value: plan },
            { display_name: 'Tenant ID', variable_name: 'tenant_id', value: tenantId }
          ]
        },
        callback: function(response) {
          console.log('Payment success callback', response);
          verifyTransaction(response.reference);
        },
        onClose: function() {
          console.log('Payment window closed by user');
        }
      });

      handler.openIframe();
    } catch (err) {
      console.error('Failed to open Paystack iframe', err);
      alert('Failed to start transaction. Check console.');
    }
  }

  // Backend verification
  function verifyTransaction(reference) {
    axios.post(`/paystack/verify/${reference}`)
      .then(res => {
        console.log('Verification response:', res.data);
        // Redirect after verification
        window.location.href = '/multitenant/dashboard';
      })
      .catch(err => {
        console.error('Verification failed:', err);
        alert('Payment succeeded but verification failed. Contact support.');
        window.location.href = '/multitenant/dashboard';
      });
  }
});
</script>






</body>
</html>
