<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>

  <link rel="icon" type="image/png" href="/multitenant/img/easyicon.png"/>
  <title>Login | EasyApps</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color: #f8f9fa;
    }

    .container {
      display: flex;
      background: white;
      width: 80%;
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      overflow: hidden;
    }

    .form-section {
      flex: 1;
      padding: 2rem;
    }

    .form-section h2 {
      margin-bottom: 1.5rem;
      font-weight: bold;
    }

    .btn-main {
      background-color: #1a202c;
      color: white;
      padding: 0.8rem;
      border: none;
      border-radius: 6px;
      width: 100%;
      margin-top: 10px;
    }

    .btn-main:hover {
      background-color: #2d3748;
    }

    .btn-google {
      background-color: white;
      border: 1px solid #ddd;
      padding: 0.7rem;
      width: 100%;
      border-radius: 6px;
      margin-top: 10px;
    }

    .btn-apple {
      background-color: black;
      color: white;
      padding: 0.7rem;
      width: 100%;
      border-radius: 6px;
      margin-top: 10px;
    }

    .divider {
      text-align: center;
      margin: 15px 0;
      color: #777;
      font-size: 14px;
    }

    .preview-section {
      flex: 1;
      background-color: #f4f5f7;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 2rem;
    }

    .preview {
      width: 250px;
      height: 480px;
      background: white;
      border-radius: 16px;
      border: 1px solid #ddd;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 1rem;
    }

    .icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .preview nav {
      display: flex;
      justify-content: space-around;
      width: 100%;
      margin-top: auto;
      border-top: 1px solid #ddd;
      padding-top: 10px;
    }

    .signup-link {
      text-align: center;
      margin-top: 15px;
    }

    .signup-link a {
      text-decoration: none;
      font-weight: bold;
    }

    @media(max-width:768px) {
      .container {
        flex-direction: column;
      }

      .preview-section {
        display: none;
      }
    }
  </style>
</head>

<body>

<div class="container">

  <!-- LEFT LOGIN FORM -->
  <div class="form-section">

    <h4>  ðŸš€ Login To Your Account</h4>

    <% if (success_msg && success_msg.length) { %>
      <div class="alert alert-success"><%= success_msg[0] %></div>
    <% } %>

    <% if (error_msg && error_msg.length) { %>
      <div class="alert alert-danger"><%= error_msg[0] %></div>
    <% } %>

    <form action="/multitenant/login" method="POST">

      <!-- Email -->
      <div class="mb-3">
        <label>Email</label>
        <input
          type="email"
          name="email"
          class="form-control"
          placeholder="Enter email"
          required>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label>Password</label>
        <input
          type="password"
          name="password"
          class="form-control"
          placeholder="Enter password"
          required>
      </div>

      <!-- Login Button -->
      <button type="submit" class="btn-main">
        Login
      </button>

    </form>

    <div class="divider">OR</div>

    <!-- Google Login -->
    <a href="">
      <button class="btn-google">
       ðŸ”µ Continue with Google
      </button>
    </a>

    <!-- Apple Login -->
    <a href="">
      <button class="btn-apple">
        ï£¿ Continue with Apple
      </button>
    </a>

    <!-- Signup Redirect -->
    <div class="signup-link">
      Don't have an account?
      <a href="/multitenant/signup">Sign up</a>
    </div>

  </div>

  <!-- RIGHT PREVIEW -->
  <div class="preview-section">

    <div class="preview">

      <div class="icon">ðŸ›’</div>

      <h3>EasyApps</h3>

      <div style="flex:1;"></div>

      <nav>
        <span>Home</span>
        <span>Search</span>
      </nav>

    </div>

  </div>

</div>

</body>
</html>
